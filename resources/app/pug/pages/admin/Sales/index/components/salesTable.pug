                        .table__col Spring celebration

                        .table__col 20.03.20 - 20.04.20
                        .table__col Finished
                        .table__col
                            i.fas.fa-times.cur

                            a(href="show.html")
                                i.fas.fa-eye.cur.ml-10

                            a(href="edit.html")
                                i.fas.fa-pencil-alt.cur.ml-10

                            i.fas.fa-ban.cur.ml-10

