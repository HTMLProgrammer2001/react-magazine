.container
    .myOrders.py-pad

        h3 Sales

        .myOrders__header.my-pad
            span.myOrders__find
                .input
                    input(type="text" required="").input__elem
                    label.input__label Find sale

            a(href="create.html")
                button.but.but_outline Create

        .myOrders__types.my-pad
            .radio
                label.row
                    input(type="radio" name="filter" checked="").radio__elem
                    span.radio__label All

            .radio
                label.row
                    input(type="radio" name="filter").radio__elem
                    span.radio__label Finished

            .radio
                label.row
                    input(type="radio" name="filter").radio__elem
                    span.radio__label Continue

            .radio
                label.row
                    input(type="radio" name="filter").radio__elem
                    span.radio__label Stopped

            .center.space-between.my-pad.period
                .input
                    input(type="date" required="" value="2020-01-01").input__elem
                    label.input__label From

                .input.ml-1
                    input(type="date" required="" value="2020-06-06").input__elem
                    label.input__label To

        .table__wrap
            .table
                .table__head
                    .table__head-item ID
                    .table__head-item Name
                    .table__head-item During
                    .table__head-item Status
                    .table__head-item Actions

                .table__content
                    .table__row
